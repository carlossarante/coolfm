@import "nib"
@import "iconmoon.styl"
@import "nouvelles.styl"

*
	margin 0px
	padding 0px
html
	overflow hidden
	width 100%
	height 100%
	background-color black
body
	height 100%
	width 100%
	position relative //antes fixed
	overflow hidden
	.body-view
		height 100%
		width 100%
		position absolute
		overflow auto
		overflow-x hidden
		z-index 1
	.sectionLeftAnim.ng-enter
	.sectionLeftAnim.ng-leave
		transition all 0.5s cubic-bezier(1,1,0,0)
	.sectionLeftAnim.ng-enter
			left 100%
			z-index 2			
	.sectionLeftAnim.ng-enter-active
			left 0%
			z-index 2
	.sectionLeftAnim.ng-leave
			left 0%
			z-index 1
	.sectionLeftAnim.ng-leave-active
			left 0%
			z-index 1

	.sectionRightAnim.ng-enter
	.sectionRightAnim.ng-leave
		transition all 0.5s cubic-bezier(1,1,0,0)
	.sectionRightAnim.ng-enter
			left 0%
			z-index 1			
	.sectionRightAnim.ng-enter-active
			left 0%
			z-index 1
	.sectionRightAnim.ng-leave
			left 0%
			z-index 2
	.sectionRightAnim.ng-leave-active
			left 100%
			z-index 2

	.newsOutAnim.ng-enter
	.newsOutAnim.ng-leave
		transition all 0.5s cubic-bezier(1,1,0,0)
	.newsOutAnim.ng-enter
			z-index 1			
	.newsOutAnim.ng-enter-active
			z-index 1
	.newsOutAnim.ng-leave
			top 0%
			z-index 2
	.newsOutAnim.ng-leave-active
			top 100%
			z-index 2

	.newsInAnim.ng-enter
	.newsInAnim.ng-leave
		transition all 0.5s cubic-bezier(1,1,0,0)
	.newsInAnim.ng-enter
			top 100%
			z-index 2			
	.newsInAnim.ng-enter-active
			top 0%
			z-index 2
	.newsInAnim.ng-leave
			top 0
			z-index 1
	.newsInAnim.ng-leave-active
			top 0
			z-index 1
a
