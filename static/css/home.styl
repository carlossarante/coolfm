		.gradient-b
			background linear-gradient(9deg,#c00 0%, #c00 45%, #400 90%)
		.nous-sommes
			background-color white
			text-align right
			&:after
				content ''
				position absolute
				top 0%
			span
				color #e54c23
				cursor default
				font-weight bold
				margin 0px 6px 0px 0px
		.nous-anim
			animation-duration 8s
			animation-iteration-count infinite
			bottom 19%
			color white
			cursor default
			font-weight bold
			left -1000px
			margin 0px 0px 0px 8%
			position absolute
		.famille
			animation-name famille
		.novelle
			animation-name novelle
		.musique
			animation-name musique
		#play-img
			z-index 2
			img
				position absolute
				transition margin-left 1s ease-out
				width 100%
			/*#circle1
				z-index 2
			#circle2
				z-index 3
			#circle3
				z-index 4*/
			#play-cont
				z-index 5
				#circle4
					position relative
					bottom 0px
					width 100%
				#play1
					animation playing 6s
					animation-delay 4s
					animation-play-state running
					background url(../img/Cool-web-play-Blanco2.png) no-repeat
					background-size 100% 100%
					left 34%
					top 30%
					position absolute
					transition all 0.3s
					width 40%
					height 40%
					z-index 5
					cursor pointer
					&:hover
						background url(../img/Cool-web-play-Mamei3.png) no-repeat
						background-size 100% 100%
	.program
		z-index 2
		.gradient-a
			background linear-gradient(#1a1d5e 0%, #1a1d5e 10%, #1d3ee0 100%)
		.gradient-b
			background linear-gradient(-6deg,#1d3ee0 0%, #1d3ee0 45%, #1a1d5e 90%)
		#current-schedule
			height 60%
			top 18%
			.schedule
				border 2px solid transparent
				background-color white
				box-shadow 0px 0px 10px black
				color black
				height 17.5%
				margin 2.5% 1%
				width 98%
				display table
				cursor pointer
				span
					display table-cell					
					vertical-align middle
					font-weight bold
					overflow hidden
					position relative
					text-align center
				.hour
					box-shadow 10px 0px 5px -7px #aaa					
					width 40%
				.program-name
					width 60%
			.program-active
				border 2px solid red
				box-shadow 0px 0px 10px red
	.broadcasters
		z-index 3
		display table
		.gradient-a
			background linear-gradient(#0d3c06 0%, #0d3c06 10%, #1f8f0f 100%)
		.gradient-b
			background linear-gradient(-6deg,#1f8f0f 0%, #1f8f0f 45%, #0d3c06 90%)
		.scroll-item
			z-index 1
			text-align center
			color rgba(255,255,255,0.8)
			position absolute
			cursor pointer
			background-color transparent
			transition background-color 0.2s
			&:hover
				background-color rgba(0,0,0,0.8)
		.left-scroll
			left 0%
			border-radius 0% 50% 50% 0%
		.right-scroll
			right 0%
			border-radius 50% 0% 0% 50%

		#broadcaster-show
			display table-cell
			vertical-align middle
			max-width 100px
			font-size 0
			.container
				position relative
				width 25%
				margin 0px 0px 0px 0%
				ul
					position relative
					//text-align left
					width 100%
					transition left 0.5s ease-out
					li
						position relative
						.cover_narrator
							background-color white
							border-radius 50%
							box-shadow 10px 10px 10px black
							transition background-color 0.5s ease-out
							.narrator
								border-radius 50%
								overflow hidden
								box-shadow 10px 10px 10px black inset
								img
									visibility hidden
									width 100%
						.casterActive
							background-color yellow
		#broadcaster-info
			color white
			left 5%
			width 90%
			height 25%
			position absolute
			bottom 0px
			span
				display block
			.narrator-name
				position absolute
				bottom 100%
			.narrator-info
				padding-top 10px
				text-align justify

	.contact
		z-index 4
		.gradient-a
			background linear-gradient(#6c6c6c 0%, #6c6c6c 10%, #d7d7d7 100%)
		.gradient-b
			background linear-gradient(-6deg,#d7d7d7 0%, #d7d7d7 45%, #6c6c6c 90%)
		#map
			background linear-gradient(15deg,#222 0%,#000 40%)
			border 2px solid black
			color black
			font-size 1.2rem
			left 4%
			text-shadow 0px 0px 10px white
			object
				height 97%
				margin 1%
				width 98%
		form
			p
				padding 1%
			input
				font-size inherit
				&[type=submit]
					background-color black
					border 1px solid #222
					border-radius 3px
					color white
					float right
					margin 1%
					padding 10px 0px
					width 100px
					cursor pointer
				&:not([type=submit])
					border 1px solid #ccc
					border-radius 3px
					height 6%
					min-height 25px
					margin 10px 0px
					padding 1.5%
					width 95%
			textarea
				font-size inherit
				font-family inherit
				border 1px solid #ccc
				border-radius 3px
				height 45%
				min-height 100px
				margin-bottom 10px
				padding 1.5%
				resize none
				width 95%
	#news
		background-color black
		bottom 0px
		left 0
		box-shadow 0px 0px 10px black
		height 30px
		position fixed
		transition height 0.5s
		width 100%
		z-index 20
