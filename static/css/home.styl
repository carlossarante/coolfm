@keyframes famille
	1%
		left 0px
	33%
		left 0px
	35%
		left -1000px
	99%
		left -1000px

@keyframes musique
	0%
		left -1000px
	33%
		left -1000px
	35%
		left 0px
	65%
		left 0px
	67%
		left -1000px
	100%
		left -1000px

@keyframes novelle
	0%
		left -1000px
	65%
		left -1000px
	67%
		left 0px
	99%
		left 0px

@keyframes escuchar
	0%
		transform: scale(0.5,0.5)
		visibility visible
	10%
		transform scale(1.1,1.1)
		visibility visible
	20%
		transform scale(0.9,0.9)
		visibility visible
	30%
		transform scale(1.1,1.1)
		visibility visible
	 40%
		transform scale(0.9,0.9)
		visibility visible
	50%
		transform scale(1.1,1.1)
		visibility visible
	60%
		transform scale(0.9,0.9)
		visibility visible
	70%
		transform scale(1.1,1.1)
		visibility visible
	80%
		transform scale(0.9,0.9)
		visibility visible
	90%
		transform scale(1.1,1.1)
		visibility visible
	100%
		transform scale(0,0)
		visibility hidden

