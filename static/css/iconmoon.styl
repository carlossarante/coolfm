@font-face
  font-family 'icomoon'
  src url('/static/css/fonts/icomoon.eot?ouylak')
  src url('/static/css/fonts/icomoon.eot?#iefixouylak') format('embedded-opentype'),
      url('/static/css/fonts/icomoon.woff?ouylak') format('woff'),
      url('/static/css/fonts/icomoon.ttf?ouylak') format('truetype'),
      url('/static/css/fonts/icomoon.svg?ouylak#icomoon') format('svg');
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-arrow-right
  &:before
    content "\e600"

.icon-arrow-left
  &:before
    content "\e601"

